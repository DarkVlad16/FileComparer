<Window x:Class="FileComparer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:FileComparer.Properties"
        Title="{x:Static properties:Constants.Title}"
        Width="450"
        Height="150">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="{Binding FileName}" VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Margin="20" Content="Загрузка Файла" Width="130" Height="30" Command="{Binding LoadFileCommand}" />
                <Button Margin="20" Content="Загрузка Директории" Width="130" Height="30" Command="" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>